{
  "name": "todolist",
  "displayName": "TodoList",
  "repository": "https://github.com/sacsand/NoteToDo-vs-code",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.showTodoPanel",
    "onView:todoView"  
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showTodoPanel",
        "title": "Show Todo Panel"
      },
      {
        "command": "todoView.open",
        "title": "Open To-Do & Markdown View",
        "category": "To-Do & Notes"
      }
    ],
    "keybindings": [
      {
        "command": "extension.showTodoPanel",
        "key": "ctrl+t",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoSidebar",
          "title": "To-Do & Notes",
          "icon": "media/icon.png"  
        }
      ]
    },
    "views": {
      "todoSidebar": [
        {
          "id": "todoView",
          "name": "To-Do & Markdown"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.54.0",
    "@types/webpack-sources": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  }
}